# The global variable file mongodb installation

mongo_ver: 3.4.6-1.el6.x86_64

# The directory prefix where the database files would be stored
mongodb_datadir_prefix: /data/mongo

# The interface where the mongodb process should listen on.
# Defaults to the first interface. Change this to:
# 
#  iface: eth1
#
# ...to override.
# 
iface: '{{ ansible_default_ipv4.interface }}'

# mongo config server replica set name
mongoc_replSetName: cfgReplSet

# mongo config server port
mongoc_port: 21000

# mongodb shard1 replica set name
mongod_shard1_replSetName: shard1ReplSet

# mongodb shard1 port
mongod_shard1_port: 22001

# mongodb shard2 replica set name
mongod_shard2_replSetName: shard2ReplSet

# mongodb shard2 port
mongod_shard2_port: 22002

# mongodb shard3 replica set name
mongod_shard3_replSetName: shard3ReplSet

# mongodb shard3 port
mongod_shard3_port: 22003

# mongos port
mongos_port: 20000
