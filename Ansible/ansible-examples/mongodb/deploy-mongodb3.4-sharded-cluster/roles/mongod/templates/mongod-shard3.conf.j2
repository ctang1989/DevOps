# mongod-shard3.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: {{ mongodb_datadir_prefix }}/mongod/shard3/log/mongod-shard2.log

# Where and how to store data.
storage:
  dbPath: {{ mongodb_datadir_prefix }}/mongod/shard3/data
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:

# how the process runs
processManagement:
  fork: true  # fork and run in background
  pidFilePath: {{ mongodb_datadir_prefix }}/mongod/shard3/mongod.pid  # location of pidfile

# network interfaces
net:
  port: {{ mongod_shard3_port }}
# bindIp: 127.0.0.1  # Listen to local interface only, comment to listen on all interfaces.


#security:
# authorization: enabled

#operationProfiling:

replication:
  replSetName: {{ mongod_shard3_replSetName }}

sharding:
  clusterRole: shardsvr

