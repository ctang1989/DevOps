# mongoc.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: {{ mongodb_datadir_prefix }}/mongoc/log/mongo-config.log

# Where and how to store data.
storage:
  dbPath: {{ mongodb_datadir_prefix }}/mongoc/data
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:

# how the process runs
processManagement:
  fork: true  # fork and run in background
  pidFilePath: {{ mongodb_datadir_prefix }}/mongoc/mongoc.pid  # location of pidfile

# network interfaces
net:
  port: {{ mongoc_port }}
# bindIp: 127.0.0.1  # Listen to local interface only, comment to listen on all interfaces.


#security:
# authorization: enabled

#operationProfiling:

replication:
  replSetName: {{ mongoc_replSetName }}

sharding:
  clusterRole: configsvr

