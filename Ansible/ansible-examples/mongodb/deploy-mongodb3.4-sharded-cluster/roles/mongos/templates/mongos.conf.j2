# mongos.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: {{ mongodb_datadir_prefix }}/mongos/log/mongos.log

# how the process runs
processManagement:
  fork: true  # fork and run in background
  pidFilePath: {{ mongodb_datadir_prefix }}/mongos/mongos.pid  # location of pidfile

# network interfaces
net:
  port: {{ mongos_port }}
# bindIp: 127.0.0.1  # Listen to local interface only, comment to listen on all interfaces.


#security:
# authorization: enabled

#operationProfiling:

sharding:

{% set hosts = '' %}
{% for host in groups['mongoc_servers'] %}
  {% if loop.last %}
    {# ~ 在Jinja2模板里表示字符串连接 #}
    {% set hosts = hosts + host + ':' ~ mongoc_port  %}
      configDB: {{ mongoc_replSetName }}/{{ hosts }}
  {% else %}
    {% set hosts = hosts + host + ':' ~ mongoc_port + ','  %}
  {% endif %}
{% endfor %}

